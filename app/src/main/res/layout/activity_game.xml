<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HIT"
            android:id="@+id/hitbut"
            android:layout_marginLeft="48dp"
            android:layout_marginStart="48dp"
            android:layout_marginBottom="124dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="HitUser" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="STAY"
            android:id="@+id/staybut"
            android:layout_alignTop="@+id/hitbut"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="51dp"
            android:layout_marginEnd="51dp"
            android:onClick="StayUser" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Your Hand:"
            android:id="@+id/userhandtext"
            android:layout_marginBottom="22dp"
            android:layout_above="@+id/hitbut"
            android:layout_alignLeft="@+id/hitbut"
            android:layout_alignStart="@+id/hitbut" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0"
            android:id="@+id/usertotaltext"
            android:layout_alignTop="@+id/userhandtext"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Dealer&apos;s Hand:"
            android:id="@+id/dealerhandtext"
            android:layout_marginTop="35dp"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/userhandtext"
            android:layout_alignStart="@+id/userhandtext" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0"
            android:id="@+id/dealertotaltext"
            android:layout_alignTop="@+id/dealerhandtext"
            android:layout_toLeftOf="@+id/staybut"
            android:layout_toStartOf="@+id/staybut" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Hand"
            android:id="@+id/newhandbut"
            android:layout_below="@+id/staybut"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="36dp"
            android:onClick="NewHand" />
    </RelativeLayout>
</LinearLayout>
